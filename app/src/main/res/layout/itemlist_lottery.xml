<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerLottery"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:background="@color/lotto24_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLogoLottery"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/logo_lotto24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvBannerDateNextDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23\nMIO"
            android:textSize="20dp"
            android:textColor="@color/red_next_draw"
            android:gravity="center"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvNameLottery"
        tools:text="LOTTO24 6aus49"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/bannerLottery"/>

    <TextView
        android:id="@+id/tvDateResultsLastDraw"
        tools:text="Mi, 18.09.2023"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameLottery"
        app:layout_constraintStart_toEndOf="@id/bannerLottery"/>

    <TextView
        android:id="@+id/tvTotalStakeLastDraw"
        tools:text="Total stake: 47220674.40€"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateResultsLastDraw"
        app:layout_constraintStart_toEndOf="@id/bannerLottery"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_light_gray"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalStakeLastDraw"
        app:layout_constraintStart_toEndOf="@id/bannerLottery">

        <TextView
            android:id="@+id/tvNumberOneLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="6"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumberTwoLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="9"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberOneLight"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumberThreeLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="10"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberTwoLight"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumberFourLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="7"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberThreeLight"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumberFiveLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberFourLight"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumberSixLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="23"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberFiveLight"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNumberSevenLight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:text="2"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:background="@drawable/circle_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberSixLight"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerAdditionalPointsLotto24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_dark_gray"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNumberSevenLight">

            <TextView
                android:id="@+id/tvNumberOneDark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:text="9"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/circle_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNumberTwoDark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:text="14"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                android:background="@drawable/circle_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvNumberOneDark"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvJackpotOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:paddingStart="12dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="WTC1 Jackpot: 1000000.00€"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/containerPoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bannerLottery"/>

    <TextView
        android:id="@+id/tvJackpotTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:paddingStart="12dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="WTC2 Jackpot: 17000000.00€"
        android:layout_marginBottom="12dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/tvJackpotOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bannerLottery"/>

    <TextView
        android:id="@+id/tvDateNextDraw"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:textSize="14dp"
        android:textColor="@color/red_next_draw"
        android:gravity="center"
        android:layout_marginTop="12dp"
        tools:text="Tue, 23.09.2023"
        android:background="@drawable/date_background_lotto24"
        app:layout_constraintTop_toBottomOf="@id/tvJackpotTwo"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvLabelDateNextDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/tvDateNextDraw"
        app:layout_constraintTop_toTopOf="@id/tvDateNextDraw"
        app:layout_constraintBottom_toBottomOf="@id/tvDateNextDraw"
        android:text="Next draw:"/>

    <TextView
        android:id="@+id/tvLabelWinners"
        android:text="Winners"
        android:textSize="12dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvDateNextDraw"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNumberOfWinner"
        tools:text="44580023"
        android:textSize="12dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLabelWinners"
        app:layout_constraintStart_toStartOf="@id/tvDateNextDraw"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>