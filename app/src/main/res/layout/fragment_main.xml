<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.MainFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/halfCardGuideline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bannerLotto24"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:paddingTop="12dp"
                android:background="@color/lotto24_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/halfCardGuideline"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/logo_lotto24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/shorDateNextDrawLotto24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23\nMIO"
                    android:textSize="20dp"
                    android:textColor="@color/red_next_draw"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/labelDateNextDrawLotto24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@id/dateNextDrawLotto24"
                app:layout_constraintTop_toTopOf="@id/dateNextDrawLotto24"
                app:layout_constraintBottom_toBottomOf="@id/dateNextDrawLotto24"
                android:text="Next draw:"/>

            <TextView
                android:id="@+id/dateNextDrawLotto24"
                android:layout_width="130dp"
                android:layout_height="26dp"
                android:textSize="14dp"
                android:textColor="@color/red_next_draw"
                android:gravity="center"
                android:text="Tue, 23.09.2023"
                android:background="@drawable/date_background_lotto24"
                app:layout_constraintBottom_toBottomOf="@id/halfCardGuideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wtc2JackpotLotto24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:paddingStart="12dp"
                android:text="WTC2 Jackpot: 17000000.00€"
                android:layout_marginBottom="12dp"
                android:background="@color/light_gray"
                app:layout_constraintBottom_toTopOf="@id/dateNextDrawLotto24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24"/>

            <TextView
                android:id="@+id/wtc1JackpotLotto24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:paddingStart="12dp"
                android:text="WTC1 Jackpot: 1000000.00€"
                android:background="@color/light_gray"
                app:layout_constraintBottom_toTopOf="@id/wtc2JackpotLotto24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerPointsLotto24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_light_gray"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/wtc1JackpotLotto24"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24">

                <TextView
                    android:id="@+id/tvNumberOneLotto24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="6"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberTwoLotto24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="9"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberOneLotto24"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberThreeLotto24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="10"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberTwoLotto24"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberFourLotto24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="7"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberThreeLotto24"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberFiveLotto24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberFourLotto24"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberSixLotto24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="23"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberFiveLotto24"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerAdditionalPointsLotto24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_dark_gray"
                    android:padding="4dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberSixLotto24">

                    <TextView
                        android:id="@+id/tvNumberSevenLotto24"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        tools:text="14"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/circle_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/totalStakeLastDrawLotto24"
                android:text="Total stake: 47220674.40€"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toTopOf="@id/containerPointsLotto24"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24"/>

            <TextView
                android:id="@+id/dateResultLastDrawLotto24"
                android:text="Mi, 18.09.2023"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toTopOf="@id/totalStakeLastDrawLotto24"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24"/>

            <TextView
                android:id="@+id/labelLotto24"
                android:text="LOTTO24 6aus49"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/dateResultLastDrawLotto24"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24"/>

            <TextView
                android:id="@+id/labelWinnersSuperLotto24"
                android:text="Winners:"
                android:textSize="12dp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/dateNextDrawLotto24"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/numberOfWinnersSuperLotto24"
                android:text="SUPER 7: 123456"
                android:textSize="12dp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/labelWinnersSuperLotto24"
                app:layout_constraintStart_toStartOf="@id/dateNextDrawLotto24"
                app:layout_constraintEnd_toEndOf="parent"/>






            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardBannerEurojackpot"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:paddingTop="12dp"
                android:background="@color/eurojackpot_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/halfCardGuideline"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/logo_eurojackpot"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/shorDateNextDrawEurojackpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23\nMIO"
                    android:textSize="20dp"
                    android:textColor="@color/yellow_next_draw"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/labelWinnersSuperEuroJackpot"
                android:text="Winners:"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/blue"
                app:layout_constraintTop_toBottomOf="@id/halfCardGuideline"
                app:layout_constraintStart_toStartOf="@id/dateNextDrawLotto24"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/numberOfWinnersSuperEurojackpot"
                android:text="SUPER 6+7: 123456"
                android:textSize="12dp"
                android:textColor="@color/blue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/labelWinnersSuperEuroJackpot"
                app:layout_constraintStart_toStartOf="@id/dateNextDrawLotto24"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/labelEurojackpot"
                android:text="Eurojackpot"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/halfCardGuideline"
                app:layout_constraintStart_toEndOf="@id/cardBannerEurojackpot"/>

            <TextView
                android:id="@+id/dateResultLastDrawEuroJackpot"
                android:text="Mi, 18.09.2023"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/labelEurojackpot"
                app:layout_constraintStart_toEndOf="@id/cardBannerEurojackpot"/>

            <TextView
                android:id="@+id/totalStakeLastDrawEuroJackpot"
                android:text="Total stake: 47220674.40€"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/dateResultLastDrawEuroJackpot"
                app:layout_constraintStart_toEndOf="@id/bannerLotto24"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerPointsEurojackpot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_light_gray"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/totalStakeLastDrawEuroJackpot"
                app:layout_constraintStart_toEndOf="@id/cardBannerEurojackpot">

                <TextView
                    android:id="@+id/tvNumberOneEurojackpot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="6"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberTwoEurojackpot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="9"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberOneEurojackpot"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberThreeEurojackpot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="10"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberTwoEurojackpot"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberFourEurojackpot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="7"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberThreeEurojackpot"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumberFiveEurojackpot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:text="11"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberFourEurojackpot"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerAdditionalPointsEurojackpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_dark_gray"
                    android:padding="4dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNumberFiveEurojackpot">

                    <TextView
                        android:id="@+id/tvNumberSixEurojackpot"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        tools:text="23"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/circle_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNumberSevenEurojackpot"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        tools:text="14"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/circle_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvNumberSixEurojackpot"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/labelDateNextDrawEurojackpot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@id/dateNextDrawEurojackpot"
                app:layout_constraintTop_toTopOf="@id/dateNextDrawEurojackpot"
                app:layout_constraintBottom_toBottomOf="@id/dateNextDrawEurojackpot"
                android:text="Next draw:"/>

            <TextView
                android:id="@+id/dateNextDrawEurojackpot"
                android:layout_width="130dp"
                android:layout_height="26dp"
                android:textSize="14dp"
                android:textColor="@color/yellow_next_draw"
                android:gravity="center"
                android:text="Tue, 23.09.2023"
                android:background="@drawable/date_background_eurojackpot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wtc1JackpotEuroJackpot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:paddingStart="12dp"
                android:text="WTC1 Jackpot: 1000000.00€"
                android:background="@color/light_gray"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/dateNextDrawEurojackpot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardBannerEurojackpot"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>